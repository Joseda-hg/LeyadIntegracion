@page "/dashboard"

<PageTitle>Vendor Dashboard</PageTitle>

<h1 class="mb-4">Vendor Dashboard</h1>

<div class="row g-4">
    <!-- Softland Section - Blue -->
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm" style="background-color: #e3f2fd;">
            <div class="card-header text-white" style="background-color: #1976d2;">
                <h5 class="mb-0">
                    <i class="bi bi-building"></i> Softland
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">ERP Integration System</p>
                <div class="d-grid gap-2">
                    <button class="btn btn-primary">Connect</button>
                    <button class="btn btn-outline-primary">View Status</button>
                </div>
            </div>
        </div>
    </div>

    <!-- MercadoLibre Section - Yellow -->
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm" style="background-color: #fff9c4;">
            <div class="card-header text-dark" style="background-color: #fbc02d;">
                <h5 class="mb-0">
                    <i class="bi bi-shop"></i> MercadoLibre
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">E-commerce Platform</p>
                <div class="d-grid gap-2">
                    <button class="btn btn-warning">Connect</button>
                    <button class="btn btn-outline-warning">View Products</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bsale Section - Orange -->
    <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm" style="background-color: #ffe0b2;">
            <div class="card-header text-white" style="background-color: #f57c00;">
                <h5 class="mb-0">
                    <i class="bi bi-receipt"></i> Bsale
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Point of Sale System</p>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn text-white" style="background-color: #f57c00;">Synchronize Sales</button>
                    <button class="btn text-white" style="background-color: #ef6c00;">Sync Products</button>
                    <button class="btn text-white" style="background-color: #e65100;">Generate Report</button>
                </div>

                <!-- Recent Sales Grid -->
                <h6 class="mt-3">Recent Sales</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-striped">
                        <thead class="table-warning">
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>#001</td>
                                <td>Nov 21</td>
                                <td>$150.00</td>
                                <td><span class="badge bg-success">Paid</span></td>
                            </tr>
                            <tr>
                                <td>#002</td>
                                <td>Nov 20</td>
                                <td>$89.50</td>
                                <td><span class="badge bg-success">Paid</span></td>
                            </tr>
                            <tr>
                                <td>#003</td>
                                <td>Nov 20</td>
                                <td>$245.00</td>
                                <td><span class="badge bg-warning text-dark">Pending</span></td>
                            </tr>
                            <tr>
                                <td>#004</td>
                                <td>Nov 19</td>
                                <td>$67.25</td>
                                <td><span class="badge bg-success">Paid</span></td>
                            </tr>
                            <tr>
                                <td>#005</td>
                                <td>Nov 19</td>
                                <td>$320.00</td>
                                <td><span class="badge bg-success">Paid</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

